#my default apt pkgs
sudo apt install -y bat brave-browser curl freecad ffmpeg fzf gimp git i3 nitrogen openssh-client openssh-server picom polybar python3 snapd stow tealdeer wget zoxide zsh

#neovim dependencies
sudo apt-get install ninja-build gettext cmake curl build-essential

#alacritty dependencies
sudo curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
rustup override set stable
rustup update stable
sudo apt install cmake g++ pkg-config libfreetype6-dev libfontconfig1-dev libxcb-xfixes0-dev libxkbcommon-dev python3

#orca-slicer; mesloLGSNF;
#build/compile tools?;

mkdir -p ~/repos
cd ~/repos

alacrittyrepo="https://github.com/alacritty/alacritty.git"
git clone alacrittyrepo
cd alacritty
cargo build --release
sudo mv target/release/alacritty /usr/bin
sudo cp extra/logo/alacritty-term.svg /usr/share/pixmaps/Alacritty.svg
sudo desktop-file-install extra/linux/Alacritty.desktop
sudo update-desktop-database

cd ~/repos
neovimrepo="https://github.com/neovim/neovim"
git clone neovimrepo
cd neovim
sudo make install

cd ~/repos
kickstartnvimrepo="https://github.com/nvim-lua/kickstart.nvim.git"
git clone kickstartnvimrepo ~/.config/nvim/

cd ~/repos
powerlevel10krepo="https://github.com/romkatv/powerlevel10k.git"
git clone --depth=1 powerlevel10krepo

cd ~/repos
yazirepo="https://github.com/sxyazi/yazi.git"
git clone yazirepo
cd yazi
cargo build --release --locked

cd ~/repos
zshsyntaxhighlightingrepo="https://github.com/zsh-users/zsh-syntax-highlighting.git"
git clone zshsyntaxhighlightingrepo

cd ~/
git clone "https://github.com/corbgarza/dotfiles"
cd dotfiles
stow alacritty p10k zsh nvim i3 picom polybar myscripts
