#my default apt pkgs
sudo apt install -y bat brave-browser clonezilla curl freecad ffmpeg fzf gimp git i3 nitrogen openssh-client openssh-server picom polybar python3 snapd stow tealdeer wget zoxide zsh

#neovim dependencies
sudo apt-get install ninja-build gettext cmake curl build-essential

#alacritty dependencies
sudo curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
rustup override set stable
rustup update stable
sudo apt install cmake g++ pkg-config libfreetype6-dev libfontconfig1-dev libxcb-xfixes0-dev libxkbcommon-dev python3

#orca-slicer; mesloLGSNF;
#build/compile tools?;

mkdir -p ~/repos
cd ~/repos
git clone https://github.com/alacritty/alacritty.git
cd alacritty
cargo build --release
sudo mv target/release/alacritty /usr/bin
sudo cp extra/logo/alacritty-term.svg /usr/share/pixmaps/Alacritty.svg
sudo desktop-file-install extra/linux/Alacritty.desktop
sudo update-desktop-database

cd ~/repos
git clone https://github.com/neovim/neovim
cd neovim
sudo make install

cd ~/repos
git clone  https://github.com/nvim-lua/kickstart.nvim.git ~/.config/nvim/

cd ~/repos
git clone --depth=1 https://github.com/romkatv/powerlevel10k.git

cd ~/repos
git clone https://github.com/sxyazi/yazi.git
cd yazi
cargo build --release --locked

cd ~/repos
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git

cd ~/
git clone https://github.com/corbgarza/dotfiles
cd dotfiles
stow .
